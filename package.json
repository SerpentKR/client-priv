{
  "name": "app.serpentclient",
  "productName": "Serpent Client",
  "version": "2.0.1",
  "description": "Serpent Client",
  "main": "client.js",
  "scripts": {
    "start": "electron .",
    "compile": "electron ./compiler.js",
    "postinstall": "electron-builder install-app-deps",
		"build": "electron-builder --mac --windows --linux",
		"release": "electron-builder --mac --windows --linux --publish always"
  },
  "author": "forgoted",
  "devDependencies": {
    "electron": "^10.4.7",
    "electron-builder": "^23.3.3",
    "electron-packager": "^17.1.1"
  },
  "dependencies": {
    "axios": "^0.27.2",
    "bytenode": "^1.3.6",
    "discord-rpc": "^4.0.1",
    "electron-localshortcut": "^3.2.1",
    "electron-log": "^4.3.0",
    "electron-prompt": "^1.6.1",
    "electron-store": "^7.0.2",
    "electron-updater": "^5.3.0",
    "node-fetch": "^2.6.7",
    "node-gyp": "^9.1.0",
    "pack": "^2.2.0",
    "tmi.js": "^1.8.5",
    "v8-compile-cache": "^2.2.0",
    "yarn": "^1.22.19"
  },
  "build": {
    "appId": "app.serpentclient",
    "directories": {
      "output": "build"
    },
    "mac": {
      "target": "dmg",
      "icon": "ico.icns"
    },
    "win": {
      "target": "portable",
      "icon": "ico.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "ico.png"
    },
    "portable": {
      "unicode": false,
      "artifactName": "Serpent Client.exe"
    }
  }
}
