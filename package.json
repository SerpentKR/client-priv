{
  "name": "app.serpentclient",
  "productName": "Serpent Client",
  "version": "2.0.4",
  "description": "Serpent Client",
  "main": "client.js",
  "repository": {
    "type" : "git",
    "url" : "https://github.com/SerpentKR/client-download.git"
  },
  "scripts": {
    "start": "electron .",
    "compile": "electron ./compiler.js",
    "postinstall": "electron-builder install-app-deps",
		"build": "electron-builder --mac --windows --linux --publish never",
		"release": "electron-builder --mac --windows --linux --publish always"
  },
  "publish": {
    "provider": "github",
    "repo": "client-download",
    "owner": "SerpentKR",
    "releaseType": "release"
  },
  "author": "forgoted",
  "devDependencies": {
    "electron": "^10.4.7",
    "electron-builder": "^23.3.3",
    "electron-packager": "^17.1.1"
  },
  "dependencies": {
    "axios": "^0.27.2",
    "bytenode": "^1.3.6",
    "discord-rpc": "^4.0.1",
    "electron-localshortcut": "^3.2.1",
    "electron-log": "^4.3.0",
    "electron-prompt": "^1.6.1",
    "electron-store": "^7.0.2",
    "electron-updater": "^5.3.0",
    "node-fetch": "^2.6.7",
    "node-gyp": "^9.1.0",
    "pack": "^2.2.0",
    "tmi.js": "^1.8.5",
    "v8-compile-cache": "^2.2.0",
    "yarn": "^1.22.19"
  },
  "build": {
    "appId": "app.serpentclient",
    "directories": {
      "output": "build"
    },
    "files": [
      "!dist/"
    ],
    "mac": {
      "icon": "ico.icns",
      "publish": ["github"]
    },
    "win": {
      "icon": "ico.ico",
      "publish": ["github"]
    },
    "linux": {
      "target": "AppImage",
      "icon": "ico.png",
      "publish": ["github"]
    },
    "portable": {
      "unicode": false,
      "artifactName": "Serpent Client.exe"
    }
  }
}
